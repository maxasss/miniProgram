.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FDEACC;
  height: 100vh;
  padding-top: 20px;
}

.header {
  width: 100%;
  position: relative;
  text-align: center;
}

.background-image {
  width: 100%;
  height: 180px;
}

.avatar-wrapper {
  position: relative;
  margin-top: -50px; /* Adjust this value to control overlap */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 100px;
  height: 100px;
  background-color: #C4C4C4;
  border-radius: 50%;
  border: 5px solid #8ED1DC;
}

.username {
  margin-top: 10px;
  font-size: 20px;
  color: #333;
}

.menu {
  width: 90%;
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
  background-color: rgb(248, 242, 242);
  border-radius: 10px;
  padding: 10px 0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-icon {
  width: 30px;
  height: 30px;
}

.menu-text {
  margin-top: 5px;
  font-size: 14px;
}

.list {
  width: 100%;
  margin-top: 20px;
}

.list-item {
  width: 100%;
  padding: 15px;
  background-color: white;
  border-bottom: 1px solid #E5E5E5;
}

.list-item text {
  font-size: 18px;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #FFF;
  border-top: 1px solid #E5E5E5;
  padding: 10px 0;
}

.footer navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer image {
  width: 25px;
  height: 25px;
}

.footer text {
  margin-top: 5px;
  font-size: 12px;
}
