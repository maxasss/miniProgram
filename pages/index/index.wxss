/* 通知栏 */
.infor {
  position: absolute;
  top: 34%;
  left: 5%;
  right: 5%;
  height: 4%;
  background-color: #FAF3E6;
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding: 0 10px; 
}

.info-text {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

#info-icon {
  display: flex;
  margin-right: 0.625rem;
  font-size: 10px;
  background-image: -webkit-linear-gradient(bottom, rgba(190, 80, 12, 0.4), rgba(8, 66, 82, 0));
  border-radius: 1rem; /* 设置为更圆润的边框 */
  padding: 2px 4px; /* 添加内边距以确保圆角效果更明显 */
}

.char {
  margin-right: 2px; /* 设置每个字之间的间距 */
}

.info-message {
  font-size: 10px;
}


